{
  "name": "ts-consumer",
  "version": "0.0.0",
  "description": "TypeScript Celery Consumer",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/ahstn/ts-consumer",
  "license": "MIT",
  "bin": {
    "ts-consumer": "./build/main/run"
  },
  "scripts": {
    "build": "run-s clean && tsc -b",
    "clean": "rm -rf coverage build tmp",
    "fix": "run-s fix:*",
    "fix:lint": "eslint src --ext .ts --fix",
    "fix:prettier": "prettier 'src/**/*.ts' --write",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier 'src/**/*.ts' --list-different",
    "test:spelling": "cspell --local 'en-GB' 'src/**/*.ts' README.md"
  },
  "engines": {
    "node": "~16.14"
  },
  "dependencies": {
    "aws-sdk": "^2.1097.0",
    "celery-node": "^0.5.8",
    "pg": "~8.7",
    "yargs": "~17.4"
  },
  "devDependencies": {
    "@types/pg": "^8.6.5",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "~5.21",
    "@typescript-eslint/parser": "~5.21",
    "cspell": "~5.19",
    "cz-conventional-changelog": "~3.3",
    "eslint": "~8.14",
    "eslint-config-prettier": "~8.5",
    "eslint-plugin-eslint-comments": "~3.2",
    "eslint-plugin-functional": "~4.2",
    "eslint-plugin-import": "~2.26",
    "eslint-plugin-promise": "~6.0",
    "npm-run-all": "~4.1",
    "prettier": "~2.6",
    "ts-node": "~10.7",
    "typescript": "~4.6"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "useTabs": false,
    "arrowParens": "always"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
